%%BeginProcSet: graphics.pro
   /TextFont /Courier-Bold findfont 8 scalefont def

   % Constants.
   /ws 0.2 def

   % Radius of the generating sphere and map boundary.
   /r0 40 def
   /Rlim 2.5000 r0 mul def

   /DrawMeridian {
      ws mul setlinewidth
      0 0 moveto
      dup neg rotate
      0 Rlim neg lineto
      3 6 rmoveto -3 -6 rlineto -3 6 rlineto 3 -6 rmoveto
      exch dup stringwidth
      pop -2 div -10 rmoveto
      show
      rotate
      stroke
      } def

   /DrawParallel {
      ws mul setlinewidth
      neg 90 add 2 div dup sin exch cos div 2 mul
      r0 mul dup
      0 0
      3 -1 roll
      0 360 arc
      0 exch neg moveto
      2 -7 rmoveto
      show
      stroke
      } def
%%EndProcSet

%%EndProlog

userdict /start-hook known {start-hook} if


/vmsave save def
